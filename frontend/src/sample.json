{
  "config": {
    "name": "Apricot-75",
    "styles": {
      "color": "#a9fe9d",
      "backgroundColor": "#0f1c0d",
      "font": "Apricot"
    },
    "preloadMemory": {
      "users": [
        {"username": "admin", "password": "admin", "level": "admin"},
        {"username": "gandalf", "password": "3aglesFtw7", "level": "employee"},
        {"username": "frodo", "password": "pr3cious", "level": "guest"}
      ]
    }
  },
  "pages": [
    {
      "id": "login",
      "type": "screen",
      "content": [
        "Apricot-74 Station",
        "===========",
        {
          "type": "cue",
          "id": "failLogin"
        },
        "Please Log in:",
        {
          "type": "input",
          "prompt": "Name:",
          "memoryName": "username",
          "rules": []
        },
        {
          "type": "input",
          "prompt": "Password:",
          "memoryName": "password",
          "rules": []
        },
        {
          "type": "verify",
          "against": "users",
          "values": ["username", "password"],
          "passCue": "passLogin",
          "failCue": "retryLogin",
          "memoryName": "currrentUser"
        },
        {
          "type": "goto",
          "target": "diagnostics",
          "name" : "airflow"
        },
        {
          "type": "cue",
          "id": "passLogin"
        },
        "Thanks {username}.",
        "======",
        { "text": "> MENU", "target": "menu", "type": "links" }
      ]
    },
    {
      "id": "menu",
      "type": "screen",
      "content": [
        "Main Menu",
        "=========",
        "",
        {
          "type": "cue",
          "id": "menuCue"
        },
        { "text": "> STATION MAP", "type": "links", "target": "map" },
        { "text": "> DIAGNOSTICS", "type": "links", "target": "diagnostics" },
        { "text": "> SCHEDULE", "type": "links", "target": "schedule" },
        { "text": "> ROSTER", "type": "links", "target": "roster" },
        { "text": "> COMMS", "type": "links", "target": "comms" },
        { "text": "> CONTROLS", "type": "links", "target": "controls" }
