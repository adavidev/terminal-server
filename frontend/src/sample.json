    {
      "id": "map",
      "type": "screen",
      "content": [
        "Station Map",
        "===========",
        "",
        {
          "type": "image",
          "src": "https://i.imgur.com/htHuumj.png",
          "resolution": 30,
          "grayscale": true,
          "width": 500,
          "height": 350 
        },
        "",
        "A copy of the map is now available via data tablet.",
        "",
        "======",
        "",
        { "text": "< BACK", "target": "menu", "type": "links" }
      ]
